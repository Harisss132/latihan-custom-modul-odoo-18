<odoo>
    <record id="view_form_inventory_item" model="ir.ui.view">
        <field name="name">inventory.item.form</field>
        <field name="model">inventory.item</field>
        <field name="arch" type='xml'>
            <form string="Data Barang">
                <header>
                    <!-- Tombol Custom sendiri -->
                    <button name="update_stock" 
                            string="Update Stok" 
                            type="object" 
                            class="oe_highlight"
                            confirm="Apakah anda yakin ingin memperbarui stok?"/>
                    
                    <button name="print_label"
                            string="Cetak Label"
                            type="object"
                            class="btn-secondary"/>

                    <!-- Tombol Menyimpan dan Discard-->
                    <button string="Save" 
                            type="object" 
                            class="btn-primary" 
                            name="action_save"/>
                            
                    <button string="Discard" 
                            type="object" 
                            class="btn-secondary" 
                            name="action_cancel"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Nama Barang"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="stock"/>
                        </group>
                        <group>
                            <field name="price"/>
                            <field name="description"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_list_inventory_item" model="ir.ui.view">
        <field name="name">inventory.item.list</field>
        <field name="model">inventory.item</field>
        <field name="arch" type="xml">
            <list string="Daftar Barang">
                <field name="name"/>
                <field name="code"/>
                <field name="stock"/>
                <field name="price"/>
            </list>
        </field>
    </record>

    <record id="action_inventory_item" model="ir.actions.act_window">
        <field name="name">Data Barang</field>
        <field name="res_model">inventory.item</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_inventory_root" name="Manajemen Gudang"/>
    <menuitem id="menu_inventory_item" name="Data Barang"
        parent="menu_inventory_root" action="action_inventory_item"/>
</odoo>
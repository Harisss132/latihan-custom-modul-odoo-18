<odoo>
    <!-- action di atas sini -->
    <record id="action_inventory_purchase_order" model="ir.actions.act_window">
        <field name="name">Purchase Order</field>
        <field name="res_model">inventory.purchase.order</field>
        <field name="view_mode">list,form</field>
    </record>

     <!-- menu item urutan ke 2 -->
    <menuitem id="menu_inventory_purchase_order"
                name="Purchase Order"
                parent="menu_inventory_root"
                action="action_inventory_purchase_order"
                sequence="30"/>
    
    <!-- view list urutan ke 3 -->
    <record id="view_inventory_purchase_order_list" model="ir.ui.view">
        <field name="name">inventory.purchase.order.list</field>
        <field name="model">inventory.purchase.order</field>
        <field name="arch" type="xml">
            <list>
                <field name="reference"/>
                <field name="supplier_id"/>
                <field name="order_date"/>
                <field name="total_amount"/>
            </list>
        </field>
    </record>

    <!-- view form urutan ke 4 -->
     <record id="view_inventory_purchase_order_form" model="ir.ui.view">
        <field name="name">inventory.purchase.order.form</field>
        <field name="model">inventory.purchase.order</field>
        <field name="arch" type="xml">
            <form string="Purchase Order">
                <sheet>
                    <group>
                        <field name="reference" readonly="1"/>
                        <field name="supplier_id"/>
                        <field name="order_date"/>
                    </group>

                    <notebook>
                        <page string="Order Lines">
                            <field name="order_line_ids">
                                <list editable="bottom">
                                    <field name="product_id"/>
                                    <field name="quantity"/>
                                    <field name="price_unit"/>
                                    <field name="subtotal" readonly="1"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                    <group>
                        <field name="total_amount" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
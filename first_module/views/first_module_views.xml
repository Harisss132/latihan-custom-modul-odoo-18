<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_custom_model_list" model="ir.ui.view">
        <field name="name">custom.model.list</field>
        <field name="model">custom.model</field>
        <field name="arch" type="xml">
            <list string="Custom Models">
                <field name="name"/>
                <field name="description"/>
            </list>
        </field>
    </record>

    <record id="view_custom_model_form" model="ir.ui.view">
        <field name="name">custom.model.form</field>
        <field name="model">custom.model</field>
        <field name="arch" type="xml">
            <form string="Custom Model">
                <header>
                    <button 
                    name="action_save"
                    string="Save"
                    type="object"
                    class="btn-primary"
                    />

                    <button 
                    name="action_cancle"
                    string="Discard"
                    type="object"
                    class="btn-secondary"
                    />
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Fist Modul"/>
                        </h1>
                    </div>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_custom_item" model="ir.actions.act_window">
        <field name="name">Custom Models</field>
        <field name="res_model">custom.model</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first custom model!
            </p>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem 
        id="menu_custom_root"
        name="Custom Module"
        sequence="10"/>

    <menuitem 
        id="menu_custom_model"
        name="Custom Models"
        parent="menu_custom_root"
        action="action_custom_item"
        sequence="1"/>
</odoo>